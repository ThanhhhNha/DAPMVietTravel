@model VietTravel.Models.User

@{
    ViewBag.Title = "ChinhSuaNguoiDung";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <style>
        .form1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-primarys {
            background-color: #6f6f6f;
            color: #fff;
        }

            .btn-primarys:hover {
                color: #f5f5f5;
                background-color: #6f6f6f;
                cursor: pointer;
            }

        .form-group {
            margin: 15px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-control {
            padding: 8px 15px;
        }
    </style>
   
    <div class="container" style="margin-bottom: 250px">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="margin-top: 45px">
                <h4 style="text-align: center; font-size: 30px; text-transform: uppercase">Chỉnh sửa thông tin quản trị viên</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaUser)

                <div class="form-group" style="margin-top: 30px">
                    <dt>Tên người dùng:</dt>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenUser, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <dt>Username</dt>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <dt>Email:</dt>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <dt>Mật khẩu:</dt>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
        }

        <div class="form-group" style="display: flex; margin-top: 30px;">
            <div class="col-md-offset-2 col-md-6" style="display: flex;justify-content: flex-start">
                <a href=" @Url.Action("ChiTietNguoiDung", "UserManagement",new { id = Model.MaUser })" class="btn btn-primarys">
                    Quay lại
                </a>
            </div>
            <div class="col-md-offset-2 col-md-6" style="display: flex;justify-content: flex-end">
                <button type="submit" class="btn btn-primarys">Lưu</button>
            </div>
        </div>
    </div>

</body>
</html>