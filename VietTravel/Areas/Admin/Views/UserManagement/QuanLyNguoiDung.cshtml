@model IEnumerable<VietTravel.Models.User>

@{
    ViewBag.Title = "QuanLyNguoiDung";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <style>
        body {
            margin: 0;
            background-color: #fbfbfb;
        }

        .btn-primarys {
            background-color: #154583;
            color: #fff;
        }

            .btn-primarys:hover {
                color: #f5f5f5;
                background-color: #6f6f6f;
                cursor: pointer;
            }

        .form-group {
            margin: 10px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btnn a {
            background-color: #154583;
            color: #fff;
        }

        .main {
            margin-top: 110px;
        }

        .tablee {
            padding: 25px 35px;
            background-color: #fff;
        }
    </style>

    <div class="container main" style="margin-bottom: 250px">
        <h4 style="text-align: center; text-transform: uppercase; margin-top: 50px; font-size: 30px">Quản lý tài khoản người dùng</h4>
        <hr />
        <div class="tablee">
            <table class="table">
                    <tr>
                        <th>
                            Tên đăng nhập
                        </th>
                        <th>
                            Username
                        </th>
                        <th>
                            Mật khẩu
                        </th>
                        <th>
                            Password
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Điện thoại
                        </th>
                    </tr>

                @foreach (var item in Model)
                 {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenUser)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DienThoai)
                        </td>
                        <td>
                            <a href=" @Url.Action("ChinhSuaNguoiDung", "UserManagement",  new { id = item.MaUser })" class="btn btn-primarys">
                                Chỉnh sửa
                            </a>
                            <a href=" @Url.Action("ChiTietNguoiDung", "UserManagement",  new { id = item.MaUser })" class="btn btn-primarys">
                                Chi tiết
                            </a>
                            <a href=" @Url.Action("Delete", "AdminUsers",  new { id = item.MaUser })" class="btn btn-primarys">
                                Xóa
                            </a>

                        </td>
                    </tr>
                 }

            </table>


        </div>
        <div class="form-group" style="display: flex; margin-top: 30px;">
            <div class="col-md-offset-2 col-md-6">
                <a href=" @Url.Action("AdminTrangChu", "Account")" class="btn btn-primarys">
                    Quay lại
                </a>
            </div>
            <div class="col-md-offset-2 col-md-6" style="display: flex;justify-content: flex-end">
                <a href=" @Url.Action("Create", "AdminUsers")" class="btn btn-primarys" style="width:auto;">
                    Thêm tài khoản
                </a>
            </div>
        </div>
    </div>

</body>
</html>
